<h2>기록된 익명 질문</h2>
<div class="container">
    <% @every_post.each do |p|%> 
        <div class="well">
        <%= p.content %>
    
    <% p.replies.each do |r| %>
        <p><%= r.content %></p>
    <%end%>
    
    <form action="/reply_write" method="POST">
        <input type="hidden" name="id_of_post" value="<%=p.id%>"> </input>
        <div class="form-group">
            <textarea name="content" class="form-controll" rows="3" cols="50"></textarea>
        </div>
        <button type="submit" class="btn btn-default">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>댓글 남기기
        </button>
    </form>
        
            <a href="/update_view/<%=p.id%>">[수정]</a>
            <a href="/destroy/<%=p.id%>">[삭제]</a>
        </div>
    <%end%>
</div>
<h2><a href="/">익명질문하러가기</a></h2>